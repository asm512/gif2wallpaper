<Window x:Class="gif2Wallpaper.gifConfirmer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gif2Wallpaper"
        mc:Ignorable="d"
        Title="Preview" Height="400" Width="600" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10,10">
            <Image x:Name="gifContainer" Height="299">
            </Image>
            <Button Margin="50,10" Click="Button_Click">
                SET AS WALLPAPER
            </Button>
        </StackPanel>
    </Grid>
</Window>
