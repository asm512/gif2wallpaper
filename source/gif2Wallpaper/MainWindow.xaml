<Window x:Class="gif2Wallpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gif2Wallpaper"
        mc:Ignorable="d"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="gif2Wallpaper" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#E5EFF1">
    <Grid>
        <Grid Margin="0,0,0,505">
            <ToolBar Background="White">
                <Button x:Name="home" Content="Home" FontSize="16" Click="home_Click">
                </Button>
                <Button x:Name="selectGif" Content="Select gif" FontSize="16" Click="selectGif_Click">
                </Button>
                <Button x:Name="browseGifs" Content="Browse Gifs" FontSize="16" Click="browseGifs_Click">
                </Button>
                <Button x:Name="settings" Content="Settings" FontSize="16" Click="settings_Click">
                </Button>
                <Button x:Name="githubLink" Content="Github" FontSize="16" Click="githubLink_Click">
                </Button>
            </ToolBar>
        </Grid>
        <Grid x:Name="mainWindowContainer" Margin="10,71,10,10">
            
        </Grid>
    </Grid>
</Window>
