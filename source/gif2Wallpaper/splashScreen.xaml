<Window x:Class="gif2Wallpaper.splashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:gif2Wallpaper"
        mc:Ignorable="d"
        Title="splashScreen" Height="300" Width="300" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize" Background="Black" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Image x:Name="gifContainer"/>
            <ProgressBar x:Name="progressBar" Background="Black" BorderBrush="Black" Foreground="White" Grid.IsSharedSizeScope="True">
            </ProgressBar>
            <TextBlock Height="19" Foreground="White" HorizontalAlignment="Center" Margin="124,25,124,0">                
                Hang on...
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
